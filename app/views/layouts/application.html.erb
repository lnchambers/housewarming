<!DOCTYPE html>
<html>
  <head>
    <title>Housewarming</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <%= render partial: "login" if !current_user %>
    <%= link_to "Dashboard", dashboard_path if current_admin? %>
    <%= link_to "Logout", logout_path, method: "destroy" if current_user %>
    <% if flash[:notice] %>
      <div class="notice"><%= flash[:notice] %></div>
    <% end %>
    <%= yield %>
  </body>
</html>
